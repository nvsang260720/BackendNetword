<div class="container-fluid">
  <div class="card card-success">
    <div class="card-header">
      <h3 class="card-title">
        Quản lí tài khoản người dùng
      </h3>
      <div class='float-right'>
        <button id="btnAdd" type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#modalAdd">
          Thêm Thông Tin Nhân Viên
        </button>
      </div>
    </div>

    <div class="card-body">
      <table id="example" class="table table-striped table-bordered">
        <thead class="theadTable">
          <tr>
            <th style="width: 3%;">STT</th>
            <th style="width: 10%;">NAME</th>
            <th style="width: 10%;">EMAIL</th>
            <th style="width: 3%;">ABOUT</th>
            <th style="width: 3%;">LEVEL</th>
            <th style="width: 3%;">EDIT</th>
            <th style="width: 3%;">DELETE</th>
          </tr>
        </thead>
        <tbody>
          <% 
            var stt = 0
            users.forEach( user=> { %>
            <tr>
              <td class="centerTD">
                <%= stt++ %>
              </td>
              <td>
                <%= user.username %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <%= user.about %>
              </td>
              <td>
                <%= user.level %>
              </td>
              <td class="bt">
                <form action="/admin/update-user/<%= user._id %>" method="GET">
                  <button type="submit" class="btn btn-primary">EDIT</button>
                </form>
              </td> 
              <td>
                <form action="/admin/user/<%= user._id %>" method="POST">
                  <button type="submit" class="btn btn-danger" data-toggle="modal">DELETE</button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>