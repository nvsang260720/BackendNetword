<div class="container-fuild">
    <div class="main-body">

        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-profile" role="tab"
                    aria-controls="nav-home" aria-selected="true">Profile User</a>
                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-posts" role="tab"
                    aria-controls="nav-profile" aria-selected="false">Infor Post</a>
                <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab"
                    aria-controls="nav-contact" aria-selected="false">List Friends</a>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div  class="tab-pane fade show active" id="nav-profile" role="tabpanel" aria-labelledby="nav-home-tab">
                <div class="card">
                    <div class="card-body">
                        <div class="row gutters-sm" style="margin-top: 20;">
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex flex-column align-items-center text-center">
                                            <img src="<%= profile.avatar %>" alt="Admin" class="rounded-circle" width="150">
                                            <div class="mt-3">
                                                <h4>
                                                    <%= profile.username %>
                                                </h4>
                                                <p class="text-muted font-size-sm">
                                                    <%= profile.about %>
                                                </p>
                                                <button class="btn btn-primary">Follow</button>
                                                <button class="btn btn-outline-primary">Message</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Full Name</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <%= profile.username %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Email</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <%= profile.email %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Address</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <%= profile.address %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">birthday</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <%= profile.birthday %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">level</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <%= profile.level %>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-1">
                                                <form action="/admin/user/update-user/<%= profile._id %>" method="GET">
                                                    <button type="submit" class="btn btn-info">Edit</button>
                                                </form>
                                            </div>
                                            <div class="col-1">
                                                <form style="margin-left: 20 ;" action="/admin/user/delete-user/<%= profile._id %>"
                                                    method="POST">
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </div>
                        
                        
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="nav-posts" role="tabpanel" aria-labelledby="nav-profile-tab">
                <div class="card">
                    <div class="card-body">
                        <table id="example" class="table table-striped table-bordered">
                            <thead class="theadTable">
                                <tr>
                                    <th style="width: 3%;">STT</th>
                                    <th style="width: 15%;">ID</th>
                                    <th style="width: 15%;">Type</th>
                                    <th style="width: 10%;">Content</th>
                                    <th style="width: 15%;">Review</th>
                                    <th style="width: 15%;">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for( var i=0; i < posts.length; i++){ %>
                                    <tr>
                                        <td class="centerTD">
                                            <%= i+1 %>
                                        </td>
                                        <td>
                                            <%= posts[i]._id %>
                                        </td>
                                        <td>
                                            <%= posts[i].type %>
                                        </td>
                                        <td>
                                            <%= posts[i].content %>
                                        </td>
                                        <td class="bt">
                                            <form action="/admin/user/view-profile/<%= posts[i]._id %>" method="GET">
                                                <button type="submit" class="btn btn-primary">Review</button>
                                            </form>
                                        </td>
                                        <td class="bt">
                                            <form action="/admin/user/post/<%= posts[i]._id %>" method="POST">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                <div class="card">
                    <div class="card-body">
                        <table id="example" class="table table-striped table-bordered">
                            <thead class="theadTable">
                                <tr>
                                    <th style="width: 3%;">STT</th>
                                    <th style="width: 15%;">ID</th>
                                    <th style="width: 15%;">Type</th>
                                    <th style="width: 10%;">Content</th>
                                    <th style="width: 15%;">Review</th>
                                    <th style="width: 15%;">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                    <tr>
                                        <td class="centerTD">
                                            
                                        </td>
                                        <td>
                                            <%= friends._id %>
                                        </td>
                                        <td>
                                            <%= friends.ownerid %>
                                        </td>
                                        <td>
                                            <%= friends.friends %>
                                        </td>
                                        <td class="bt">
                                            <form action="/admin/user/view-profile/<%= friends._id %>" method="GET">
                                                <button type="submit" class="btn btn-primary">Review</button>
                                            </form>
                                        </td>
                                        <td class="bt">
                                            <form action="/admin/user/post/<%= friends._id %>" method="POST">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                   
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        

    </div>
</div>